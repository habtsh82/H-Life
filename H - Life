<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#0f172a">
    <title>Hab's Life | Cloud</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body { background-color: #0f172a; color: #e2e8f0; font-family: 'Inter', sans-serif; -webkit-tap-highlight-color: transparent; }
        .glass-panel { background: rgba(30, 41, 59, 0.7); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; }
        .nav-item { transition: all 0.2s; }
        .active-nav { color: #60a5fa; border-bottom: 2px solid #60a5fa; }
        input, select, textarea { background: #1e293b; border: 1px solid #334155; border-radius: 8px; padding: 8px; color: white; width: 100%; }
    </style>
</head>
<body class="h-screen flex flex-col overflow-hidden">

    <header class="p-4 flex justify-between items-center shrink-0 border-b border-slate-800">
        <div>
            <h1 class="text-xl font-bold text-white">Hab's Life</h1>
            <p id="current-date-display" class="text-xs text-slate-400"></p>
        </div>
        <div class="flex items-center gap-3">
            <span id="sync-status" class="text-[10px] bg-slate-800 px-2 py-1 rounded text-slate-400">● Connecting...</span>
            <button onclick="renderDashboard()" class="text-slate-300"><i class="fas fa-sync-alt"></i></button>
        </div>
    </header>

    <main id="main-content" class="flex-1 overflow-y-auto p-4 pb-24">
        </main>

    <nav class="fixed bottom-0 left-0 right-0 bg-slate-900 border-t border-slate-800 flex justify-around p-3 z-50">
        <button onclick="changeView('dashboard')" id="nav-dashboard" class="nav-item flex flex-col items-center gap-1 text-slate-400">
            <i class="fas fa-th-large"></i><span class="text-[10px]">Home</span>
        </button>
        <button onclick="changeView('tasks')" id="nav-tasks" class="nav-item flex flex-col items-center gap-1 text-slate-400">
            <i class="fas fa-check-double"></i><span class="text-[10px]">Tasks</span>
        </button>
        <button onclick="changeView('trades')" id="nav-trades" class="nav-item flex flex-col items-center gap-1 text-slate-400">
            <i class="fas fa-chart-line"></i><span class="text-[10px]">Trades</span>
        </button>
        <button onclick="changeView('schedule')" id="nav-schedule" class="nav-item flex flex-col items-center gap-1 text-slate-400">
            <i class="fas fa-calendar-alt"></i><span class="text-[10px]">Plan</span>
        </button>
    </nav>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, doc, setDoc, onSnapshot, enableIndexedDbPersistence } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        // --- 1. CONFIGURATION ---
        const firebaseConfig = {
  apiKey: "AIzaSyDnedUr-RQs_iOKKP3LSvlV1hjXxdyfaOI",
  authDomain: "h-life-tracker.firebaseapp.com",
  projectId: "h-life-tracker",
  storageBucket: "h-life-tracker.firebasestorage.app",
  messagingSenderId: "757300363968",
  appId: "1:757300363968:web:454e080f069f851c266325"
};

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const docRef = doc(db, "data", "hab_global_state");

        // --- 2. OFFLINE STORAGE & PWA ---
        enableIndexedDbPersistence(db).catch(() => console.log("Offline mode active"));
        if ('serviceWorker' in navigator) { navigator.serviceWorker.register('sw.js'); }

        // --- 3. STATE MANAGEMENT ---
        window.state = {
            tasks: [],
            tradeLog: [],
            challenge: { days: [] },
            customSchedule: {},
            lastUpdated: Date.now()
        };

        window.saveData = async () => {
            try {
                window.state.lastUpdated = Date.now();
                await setDoc(docRef, window.state);
                document.getElementById('sync-status').innerText = "● Synced";
                document.getElementById('sync-status').className = "text-[10px] bg-green-900/30 px-2 py-1 rounded text-green-400";
            } catch (e) {
                document.getElementById('sync-status').innerText = "○ Offline";
                document.getElementById('sync-status').className = "text-[10px] bg-yellow-900/30 px-2 py-1 rounded text-yellow-400";
            }
        };

        onSnapshot(docRef, (docSnap) => {
            if (docSnap.exists()) {
                window.state = docSnap.data();
                renderDashboard(); // Initial load
            }
        });

        // --- 4. VIEW ENGINE ---
        window.changeView = (view) => {
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active-nav'));
            document.getElementById(`nav-${view}`).classList.add('active-nav');
            
            if (view === 'dashboard') renderDashboard();
            if (view === 'tasks') renderTasks();
            if (view === 'trades') renderTrades();
            if (view === 'schedule') renderSchedule();
        };

        window.renderDashboard = () => {
            const main = document.getElementById('main-content');
            main.innerHTML = `
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div class="glass-panel p-4 text-center">
                        <p class="text-slate-400 text-xs uppercase">Tasks Done</p>
                        <p class="text-2xl font-bold text-blue-400">${window.state.tasks.filter(t => t.completed).length}</p>
                    </div>
                    <div class="glass-panel p-4 text-center">
                        <p class="text-slate-400 text-xs uppercase">Avg Pips</p>
                        <p class="text-2xl font-bold text-emerald-400">${calculateAvgPips()}</p>
                    </div>
                </div>
                <div class="glass-panel p-4 mb-4">
                    <h3 class="font-bold mb-3"><i class="fas fa-list text-blue-400 mr-2"></i>Recent Tasks</h3>
                    <div id="dash-tasks" class="space-y-2">
                        ${window.state.tasks.slice(0,3).map(t => `<div class="text-sm p-2 bg-slate-800/50 rounded">${t.text}</div>`).join('')}
                    </div>
                </div>
            `;
        };

        function calculateAvgPips() {
            if (window.state.tradeLog.length === 0) return 0;
            const total = window.state.tradeLog.reduce((acc, t) => acc + parseFloat(t.pips), 0);
            return (total / window.state.tradeLog.length).toFixed(1);
        }

        window.renderTasks = () => {
            const main = document.getElementById('main-content');
            main.innerHTML = `
                <div class="flex gap-2 mb-4">
                    <input type="text" id="task-input" placeholder="Add new task...">
                    <button onclick="addTask()" class="bg-blue-600 px-4 rounded text-white"><i class="fas fa-plus"></i></button>
                </div>
                <div class="space-y-2">
                    ${window.state.tasks.map((t, i) => `
                        <div class="glass-panel p-3 flex justify-between items-center">
                            <span class="${t.completed ? 'line-through text-slate-500' : ''}">${t.text}</span>
                            <div class="flex gap-3">
                                <button onclick="toggleTask(${i})"><i class="fas ${t.completed ? 'fa-undo' : 'fa-check'} text-emerald-400"></i></button>
                                <button onclick="deleteTask(${i})"><i class="fas fa-trash text-red-400"></i></button>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        };

        window.addTask = () => {
            const input = document.getElementById('task-input');
            if (!input.value) return;
            window.state.tasks.push({ text: input.value, completed: false, id: Date.now() });
            input.value = "";
            saveData();
            renderTasks();
        };

        window.toggleTask = (i) => { window.state.tasks[i].completed = !window.state.tasks[i].completed; saveData(); renderTasks(); };
        window.deleteTask = (i) => { window.state.tasks.splice(i, 1); saveData(); renderTasks(); };

        // Initialize Date
        document.getElementById('current-date-display').innerText = new Date().toLocaleDateString(undefined, { weekday: 'long', month: 'short', day: 'numeric' });
    </script>
</body>
</html>
